@page "/purchases"
@using Core.Models
@using System.Globalization
@inject HttpClient HttpClient

<h3>Mine Indkøb</h3>

@if (purchases == null)
{
    <p>Indlæser mine køb...</p>
}
else if (!purchases.Any())
{
    <p>Ingen indkøb fundet.</p>
}
else
{
    <div class="purchase-list">
        @foreach (var purchase in purchases)
        {
            <div class="purchase-item">
                <h4>@purchase.AdTitle</h4>
                <img src="@purchase.AdImageUrl" alt="Product image" class="product-image" />
                <p><strong>Beskrivelse:</strong> @purchase.AdDescription</p>
                <p><strong>Pris:</strong> @purchase.AdPrice.ToString("C", new CultureInfo("da-DK"))</p>
                <p><strong>Status:</strong> @purchase.Status</p>
                <p><strong>Købsdato:</strong> @purchase.PurchaseDate.ToShortDateString()</p>
                <p><strong>Lokation:</strong> @purchase.LocationId</p>
            </div>
        }
    </div>
}

@code {
    private List<PurchaseDetail> purchases;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var userId = "67320736b20699f02b4c46f7"; // Dynamisk bruger-ID
            purchases = await HttpClient.GetFromJsonAsync<List<PurchaseDetail>>($"https://localhost:7074/api/Purchase/user/{userId}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching purchases: {ex.Message}");
        }
    }
}
