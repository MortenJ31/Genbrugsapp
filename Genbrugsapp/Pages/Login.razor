@page "/"
@using Genbrugsapp.Service
@inject ILoginService loginService
@inject NavigationManager navManager
@inject AuthenticationStateProvider AuthStateProvider

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="row bg-light shadow-lg p-4 rounded w-100">
        <!-- Venstre kolonne med information om genbrugsmarkedet -->
        <div class="col-md-6 d-flex flex-column justify-content-center">
            <h1 class="text-success">♻️ Velkommen til Erhvervsakademi Aarhus' genbrugsmarked</h1>
            <p class="lead text-secondary">Her kan du købe og sælge genbrugsvare.</p>
            <p>
                Formålet er at skabe et bæredygtigt miljø og fremme genbrug som en central del af vores klimainitiativer.
                For at støtte dette projekt vil Eaaa stille lokaler tilrådighed til opbevaring af genbrugsvarer,
                som vil være tilgængelige i en begrænset åbningstid med personale til stede.
            </p>
            <!-- Billede af genbrug -->
            <div class="recycle-image-container">
                <img src="img/recycle.jpeg" alt="Genbrug" class="img-fluid mt-3 shadow">
            </div>
        </div>

        <!-- Højre kolonne med login og register form -->
        <div class="col-md-6 d-flex flex-column bg-white p-4 rounded shadow-sm">
            <h3 class="text-center text-success mb-4">🌍 Login</h3>

            <!-- Login Form -->
            <div>
                <div class="mb-3">
                    <label for="username" class="form-label">Brugernavn:</label>
                    <InputText id="username" @bind-Value="username" placeholder="Indtast brugernavn..." class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password:</label>
                    <InputText id="password" @bind-Value="password" type="password" placeholder="Indtast password..." class="form-control" />
                </div>
                <div class="d-flex justify-content-end mb-3">
                    <button @onclick="OnClickLogin" class="btn btn-success w-100">Login</button>
                </div>
                @if (!string.IsNullOrEmpty(errorText))
                {
                    <div class="text-danger text-center">
                        <span>@errorText</span>
                    </div>
                }
            </div>

            <hr />

            <!-- Registration Form -->
            <h3 class="text-center text-success mb-4">🌍 Registrér</h3>
            <div class="mb-3">
                <label for="registerUsername" class="form-label">Brugernavn:</label>
                <InputText id="registerUsername" @bind-Value="newUser.Username" placeholder="Indtast brugernavn..." class="form-control" />
            </div>
            <div class="mb-3">
                <label for="registerPassword" class="form-label">Password:</label>
                <InputText id="registerPassword" @bind-Value="newUser.Password" type="password" placeholder="Indtast password..." class="form-control" />
            </div>
            <div class="mb-3">
                <label for="registerEmail" class="form-label">Email:</label>
                <InputText id="registerEmail" @bind-Value="newUser.Email" placeholder="Indtast email..." class="form-control" />
            </div>
            <div class="d-flex justify-content-end mb-3">
                <button @onclick="OnClickRegister" class="btn btn-primary w-100">Registrér</button>
            </div>
            @if (!string.IsNullOrEmpty(registerErrorText))
            {
                <div class="text-danger text-center">
                    <span>@registerErrorText</span>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private string username = "";
    private string password = "";
    private string errorText = "";

    private User newUser = new User();
    private string registerErrorText = "";

    private async Task OnClickLogin()
    {
        var success = await loginService.Login(username, password);
        if (success)
        {
            navManager.NavigateTo("/home"); // Navigér til forsiden eller en anden beskyttet side
        }
        else
        {
            errorText = "Forkert kombination. Prøv igen.";
        }
    }

    private async Task OnClickRegister()
    {
        var success = await loginService.RegisterUser(newUser);
        if (success)
        {
            // Navigér til login siden eller giv feedback om registreringssucces
            registerErrorText = "";
            navManager.NavigateTo("/"); // Navigér tilbage til login siden
        }
        else
        {
            registerErrorText = "Brugernavnet er allerede i brug.";
        }
    }
}
